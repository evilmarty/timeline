<form {{action "authenticate" on="submit"}} role="form">
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <div class="form-group">
    <label for="email" class="control-label">Email</label>
    {{input value=email required=true class="form-control" id="email" type="email"}}
  </div>
  <div class="form-group">
    <label for="password" class="control-label">Password</label>
    {{input value=password required=true class="form-control" id="password" type="password"}}
  </div>
  <footer class="modal-footer">
    {{#link-to "register"}}Don't have an account?{{/link-to}}
    {{#button type="submit" class="btn btn-primary" disabled=isAuthenticating}}
      {{#if isAuthenticating}}<span class="glyphicon glyphicon-repeat spin"></span>{{/if}}
      Login
    {{/button}}
  </footer>
</form>
